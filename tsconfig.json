{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules"
  ]
}